package colToy;
import java.util.NoSuchElementException;
/**
 *
 * @author  Bambang Hariyanto,Ir.MT
 */
public class StackToy implements Stack {
    private Object[] elements;
    private int capacity;
    private int top = 0;
    
    /** Creates a new instance of StackToy */
    public StackToy(int capacity) {
        this.capacity = capacity;
        elements = new Object[capacity];
    }
    
    public boolean isEmpty() {
        return (top == 0);
    }
    
    public void add(Object o) {
        if (top == capacity) expand();
        elements[top] = o;
        top++;
    }
    
    private void reset(){
        elements = new Object[capacity];
        top = 0;
    }
    
    public void clear() {
        // for(int i=0;i<top;i++) elements[i]=null;
        // top=0;
        
        reset();
    }
    
    public Object get() {
        if (top == 0) throw new NoSuchElementException();
        return elements[top-1];
    }
    
    public void remove() {
        if (top == 0) throw new NoSuchElementException();
        elements[top--] = null;
    }
    
    public void expand(){
        capacity = capacity + 10 + (int)(.1 * capacity);
        Object[] newElements = new Object[capacity];
        for(int i=0;i<top;i++) newElements[i] = elements[i];
        elements = newElements;
    }
    
    public String toString(){
        String str = "";
        for (int i=0;i<top;i++) str += elements[i] + " ";
        return str;
    }
    
    static void test01(){
        StackToy t = new StackToy(15);
        for(int i=0;i<10;i++) t.add(new Integer(i));
        System.out.println("Stack berisi : \n");
        for(int i=0;i<10;i++) {
            System.out.println(t.get());
            t.remove();
        }
    }
    
    static void test02(){
        StackToy t = new StackToy(5);
        for(int i=0;i<10;i++) t.add(new Integer(i));
        System.out.println("Stack berisi : \n");
        for(int i=0;i<10;i++) {
            System.out.println(t.get());
            t.remove();
        }
    }
    
    public static void main(String[] args){
        test01();
//        test02();
    }
    
    public int size() {
        return top;
    }
    
}
